<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_theme_dark_onPrimaryContainer"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/home_team_name_tv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_light_onPrimaryContainer"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fulltime_scores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fulltime_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:0"
                android:textColor="@color/md_theme_light_onPrimaryContainer"
                android:background="@color/md_theme_light_onPrimaryContainer"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/first_half_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1-0)"
                android:textColor="@color/md_theme_light_onPrimaryContainer"
                android:background="@color/md_theme_light_onPrimaryContainer"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/fulltime_scores"
                app:layout_constraintStart_toStartOf="@id/fulltime_scores"
                app:layout_constraintTop_toBottomOf="@id/fulltime_scores" />

            <TextView
                android:id="@id/away_team_name_tv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_light_onPrimaryContainer"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fulltime_scores"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>